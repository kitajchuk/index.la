{
    "Main": {
        "name": {
            "type": "Text",
            "fieldset": "Feature name",
            "config": {
                "label": "Name"
            }
        },
        "order": {
            "type": "Number",
            "fieldset": "Order",
            "config": {
                "label": "Order"
            }
        },
        "artist": {
            "type": "Link",
            "fieldset": "Artist",
            "config": {
                "select": "document",
                "customtypes": [ "artist" ],
                "placeholder": "Add artist..."
            }
        },
        "grid": {
            "type": "Group",
            "fieldset": "Grid",
            "config": {
                "fields": {
                    "style": {
                        "type": "Select",
                        "fieldset": "Grid style",
                        "config": {
                            "label": "Grid Style",
                            "options": ["left", "center", "right"]
                        }
                    },
                    "default-image": {
                        "type": "Image",
                        "fieldset": "Default Image",
                        "placeholder": "Default Image"
                    },
                    "pinned-image": {
                        "type": "Image",
                        "fieldset": "Pinned Image",
                        "placeholder": "Pinned Image"
                    }
                }
            }
        },
        "cover": {
            "type": "Group",
            "fieldset": "Cover",
            "config": {
                "fields": {
                    "style": {
                        "type": "Select",
                        "fieldset": "Cover style",
                        "config": {
                            "label": "Cover Style",
                            "options": ["fullbleed", "stacked", "left", "center", "right"]
                        }
                    },
                    "image": {
                        "type": "Image"
                    },
                    "title": {
                        "type": "StructuredText",
                        "fieldset": "Text",
                        "config": {
                            "placeholder": "Add title...",
                            "multi": "heading1,heading2,heading3,heading4,heading5,heading6,paragraph,strong,em"
                        }
                    }
                }
            }
        },
        "body": {
            "type": "Slices",
            "fieldset": "Body",
            "config": {
                "choices": {
                    "text": {
                        "type": "StructuredText",
                        "fieldset": "Text",
                        "config": {
                            "placeholder": "Add text...",
                            "multi": "heading1,heading2,heading3,heading4,heading5,heading6,paragraph,strong,em,hyperlink,ulist,olist"
                        }
                    },
                    "single-image": {
                        "type": "Group",
                        "fieldset": "Image",
                        "config": {
                            "fields": {
                                "style": {
                                    "type": "Select",
                                    "fieldset": "Image style",
                                    "config": {
                                        "label": "Image Style",
                                        "options": ["fullwidth", "wide-landscape", "tite-landscape", "wide-vertical", "tite-vertical"]
                                    }
                                },
                                "image": {
                                    "type": "Image"
                                },
                                "caption": {
                                    "type": "StructuredText",
                                    "fieldset": "Text",
                                    "config": {
                                        "placeholder": "Add caption...",
                                        "multi": "paragraph,hyperlink"
                                    }
                                }
                            }
                        }
                    },
                    "diptych": {
                        "type": "Group",
                        "fieldset": "Diptych",
                        "config": {
                            "fields": {
                                "left-image": {
                                    "type": "Image"
                                },
                                "right-image": {
                                    "type": "Image"
                                }
                            }
                        }
                    },
                    "video": {
                        "type": "Embed",
                        "fieldset": "Video",
                        "config": {
                            "placeholder": "Add video..."
                        }
                    }
                }
            }
        }
    }
}
